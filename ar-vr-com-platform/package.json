{
  "name": "ar-vr-com-platform",
  "version": "1.0.0",
  "description": "AR/VR Communication Platform - Transform smartphones into AR/VR communication hubs",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "client": "cd client && python3 -m http.server 8080",
    "https": "local-ssl-proxy --source 8443 --target 8080",
    "build": "npm run build:client",
    "build:client": "rollup -c",
    "test": "jest",
    "lint": "eslint . --ext .js",
    "docs": "jsdoc -d docs/generated -r server/ client/js/"
  },
  "keywords": [
    "ar",
    "vr",
    "webxr",
    "webrtc",
    "communication",
    "spatial",
    "bluetooth",
    "iot",
    "universal"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "ws": "^8.13.0",
    "node-bluetooth": "^1.2.1",
    "mdns": "^2.7.2",
    "uuid": "^9.0.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "rollup": "^3.26.3",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-commonjs": "^25.0.3",
    "jsdoc": "^4.0.2",
    "local-ssl-proxy": "^2.0.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ar-vr-com-platform.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ar-vr-com-platform/issues"
  },
  "homepage": "https://github.com/yourusername/ar-vr-com-platform#readme"
}
